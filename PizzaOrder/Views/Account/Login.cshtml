@model PizzaOrder.Models.LoginModel
 
<div class="form-container">
  <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
     <div class="form-title">
         <h2>Log in</h2>
     </div> 
     <div class="form-group">
        <input type="text" asp-for="Login" placeholder="Login"/>
     </div>
     <div class="form-group">
        <span asp-validation-for="Login" />
     </div>
     <div class="form-group">
        <input asp-for="Password" placeholder="Password"/>
     </div>
     <div class="form-group">
        <span asp-validation-for="Password" />
     </div> 
     <div class="text-danger" asp-validation-summary="ModelOnly"></div>
     <div class="form-btn">
         <input type="submit" value="Sign-in" class="submit-btn" />
     </div>
     <div style="padding-top:5px;font-size:12px;">
        <p>New? Tap <a asp-action="Register" asp-controller="Account"><h5 class="text-link">HERE</h5></a></p>
     </div> 
  </form>
</div>