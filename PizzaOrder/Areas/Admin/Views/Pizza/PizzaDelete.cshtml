@model PizzaOrder.ViewModel.PizzaViewModel

<div class="form-container">
    <div class="form-title">
        <h2>Deleting pizza</h2>
    </div>
    <div class="form-title">
        <h5>Pizza: @Model.Pizza.Name</h5>
    </div>
    <div class="form-title">
        <h6>Price: @Model.Pizza.Price</h6>
    </div>
    
    <div class="form-title">
        <p>Components: @foreach (var item in Model.PizzaComponents)
        {
            @item.Name
        }
        </p>
    </div>
    <form asp-action="PizzaDelete" asp-controller="Pizza">
        <div class="form-group">
            <input class="submit-btn" type="submit" value="Delete" />
        </div>
        <div class="form-group">
            <a class="submit-btn" asp-action="Index">Return</a>
        </div>
    </form>  
</div>