@model IEnumerable<PizzaOrder.Models.PizzaComponent>

<div class="flex">
    <a class="submit-btn" asp-action="PizzaComAdd" asp-controller="PizzaComponent">Add component</a>
    <a class="submit-btn" asp-action="Index" asp-controller="Main">Return</a>
</div>

<table class="table">
    <tr>
       <th>Genre</th>
       <th></th>
       <th></th>     
    <tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Name</td>
        <td>@Html.ActionLink("Edit", "PizzaComEdit", new {  id=item.Id  }, new {@class = "edit-btn"})</td>
        <td>@Html.ActionLink("Delete", "", new {  id=item.Id  }, new {@class = "delete-btn"})</td>
    </tr>
    }
</table>