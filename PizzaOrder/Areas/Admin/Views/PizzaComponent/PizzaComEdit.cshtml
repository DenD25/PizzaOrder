@model PizzaOrder.Models.PizzaComponent

<div class="form-container">
    <form asp-action="PizzaComEdit" asp-controller="PizzaComponent">
        <div class="form-title">
            <h2>Edit componnent</h2>
        </div>
        <div class="form-group">
            <input type="text" asp-for="Name" placeholder="Name"/>
        </div>
        <div class="form-invalid">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <input class="submit-btn" type="submit" value="Save" />
        </div>
        <div class="form-link">
            <a class="submit-btn" asp-action="Index">Return</a>
        </div>
    </form>  
</div>  