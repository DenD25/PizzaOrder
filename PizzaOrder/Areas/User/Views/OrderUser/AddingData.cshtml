@model PizzaOrder.Models.OrderUser
 
<div class="form-container">
    <form asp-action="ProfileEdit" asp-controller="Profile">
    <div class="form-title">
         <h2>Edit profile</h2>
    </div> 
    <div class="form-group">
        <input type="text" asp-for="Name" placeholder="Name"/>
        @if(@Model.User.Email != null){
            <input type="email" asp-for="User.Email" placeholder="@Model.User.Email"/>       
        }
        else
        {
            <input type="email" asp-for="User.Email " placeholder="Email"/>
        }         
    </div>
    <div class="form-invalid-flex">
        <span style="width:50%;" asp-validation-for="Name"></span>
        <span asp-validation-for="User.Email"></span>
    </div>
    <div class="form-group">
        <input type="text" asp-for="User.City" placeholder="@Model.User.City" />
         <input style="width:220px" type="text" asp-for="User.StreetName" placeholder="@Model.User.StreetName"/>
        <input style="width:60px" type="number" asp-for="User.HouseNumber" placeholder="@Model.User.HouseNumber"/>
    </div>
    <div class="form-invalid-flex">
        <span style="width:50%;float:left;" asp-validation-for="User.City"></span>
        <span asp-validation-for="User.StreetName"></span>
        <span asp-validation-for="User.HouseNumber"></span>
    </div> 
    <div class="form-group">
        <input type="tel" pattern="[0-9]{9}" asp-for="User.PhoneNumber" placeholder="@Model.User.PhoneNumber" />
        @if(@Model.User.ApartmentsNumber != null){
            <input type="number" asp-for="User.ApartmentsNumber" placeholder="@Model.User.ApartmentsNumber" />       
        }
        else
        {
            <input style="width:140px" type="number" asp-for="User.ApartmentsNumber" placeholder="Apart. No"/>
        }          
        @if(@Model.User.PostCode != null){
            <input type="number" asp-for="User.PostCode" placeholder="@Model.User.PostCode"/>       
        }
        else
        {
            <input style="width:140px" type="number" asp-for="User.PostCode" placeholder="Post code"/>
        }          
    </div>
    <div class="form-invalid-flex">
        <span style="width:50%;" class="text-danger" asp-validation-for="User.PhoneNumber"></span>
    </div> 
    <div class="form-group" "margin-top:20px">
         <input type="submit" value="Confirm order" class="submit-btn" />
    </div> 
    </form>
</div>
