@model PizzaOrder.Models.User
 
<div class="form-container">
    <form asp-action="AddingData" asp-controller="OrderUser">
    <div class="form-title">
         <h2>Complete this form</h2>
    </div> 
    <div class="form-group">
        <input type="text" asp-for="Name" placeholder="Name" required/>
        <input type="hidden" asp-for="Login" value="@Model.Login"/>
        @if(@Model.Email != null){
            <input type="email" asp-for="Email" placeholder="@Model.Email"/>       
        }
        else
        {
            <input type="email" asp-for="Email " placeholder="Email"/>
        }         
    </div>
    <div class="form-invalid-flex">
        <span style="width:50%;"></span>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <input type="text" asp-for="City" placeholder="@Model.City" required/>
        <input style="width:220px" type="text" asp-for="StreetName" placeholder="@Model.StreetName" required/>
        <input style="width:60px" type="number" asp-for="HouseNumber" placeholder="@Model.HouseNumber" required/>
    </div>
    <div class="form-invalid-flex">
        <span style="width:50%;float:left;" asp-validation-for="City"></span>
        <span asp-validation-for="StreetName"></span>
        <span asp-validation-for="HouseNumber"></span>
    </div> 
    <div class="form-group">
        <input type="tel" pattern="[0-9]{9}" asp-for="PhoneNumber" placeholder="@Model.PhoneNumber" required/>
        @if(@Model.ApartmentsNumber != null){
            <input type="number" asp-for="ApartmentsNumber" placeholder="@Model.ApartmentsNumber" />       
        }
        else
        {
            <input style="width:140px" type="number" asp-for="ApartmentsNumber" placeholder="Apart. No"/>
        }          
        @if(@Model.PostCode != null){
            <input type="number" asp-for="PostCode" placeholder="@Model.PostCode"/>       
        }
        else
        {
            <input style="width:140px" type="number" asp-for="PostCode" placeholder="Post code"/>
        }          
    </div>
    <div class="form-invalid-flex">
        <span style="width:50%;" class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div> 
    <div class="form-group" "margin-top:20px">
         <input type="submit" value="Confirm order" class="submit-btn" />
    </div> 
    </form>
</div>
